<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lesson2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BEBEBF</item>
        <item name="colorPrimaryVariant">#FF9A9A9A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="myThemeRed" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/red_500</item>
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/red_100</item>
        <item name="colorOnPrimaryContainer">@color/red_900</item>
        <item name="colorPrimaryInverse">@color/red_200</item>
        <item name="colorSecondary">@color/red_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/red_100</item>
        <item name="colorOnSecondaryContainer">@color/red_900</item>
        <item name="colorTertiary">@color/red_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/red_100</item>
        <item name="colorOnTertiaryContainer">@color/red_900</item>
        <item name="android:statusBarColor">@color/red_800</item>

    </style>

    <style name="myThemeGreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green</item>
        <item name="colorOnPrimaryContainer">@color/green</item>
        <item name="colorPrimaryInverse">@color/green</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/green</item>
        <item name="colorOnSecondaryContainer">@color/green</item>
        <item name="colorTertiary">@color/green</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/green</item>
        <item name="colorOnTertiaryContainer">@color/green</item>
        <item name="android:statusBarColor">@color/green</item>
    </style>

    <style name="myThemeBlue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="colorOnPrimaryContainer">@color/blue</item>
        <item name="colorPrimaryInverse">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue</item>
        <item name="colorOnSecondaryContainer">@color/blue</item>
        <item name="colorTertiary">@color/blue</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/blue</item>
        <item name="colorOnTertiaryContainer">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="android:insetLeft">@dimen/zero</item>
        <item name="android:insetRight">@dimen/zero</item>
        <item name="android:layout_marginBottom">@dimen/marginButton</item>
        <item name="android:layout_marginRight">@dimen/marginButton</item>
    </style>

    <style name="myButtonStyleGray" parent="myButtonStyle">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="myButtonStyleBlack" parent="myButtonStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="myButtonStyleGreen" parent="myButtonStyle">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="myButtonStyleRed" parent="myButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="myButtonStyleOrange" parent="myButtonStyle">
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="myButtonStyleHO" parent="myButtonStyle">
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="myButtonStyleGrayHO" parent="myButtonStyleHO">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="myButtonStyleBlackHO" parent="myButtonStyleHO">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="myButtonStyleGreenHO" parent="myButtonStyleHO">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="myButtonStyleRedHO" parent="myButtonStyleHO">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="myButtonStyleOrangeHO" parent="myButtonStyleHO">
        <item name="android:backgroundTint">@color/orange</item>
    </style>

</resources>